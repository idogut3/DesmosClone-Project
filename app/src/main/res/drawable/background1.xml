<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--on below line we are adding gradient and
    specifying start and end color with angle-->
    <gradient
        android:angle="315"
        android:centerColor="@color/light_blueish_green"
        android:type="linear"
        android:startColor="@color/lavender"
        android:endColor="@color/navy"
        />
    <stroke
        android:width="3dp"
        android:color="@color/black"/>
    <corners
        android:bottomRightRadius="40sp"
        android:topLeftRadius="40sp"/>
</shape>
